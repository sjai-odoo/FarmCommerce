<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="action_contacts_view" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="res_model">contact.property</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <record id="contact_property_view_kanban" model="ir.ui.view">
        <field name="name">contact.property.view.kanban</field>
        <field name="model">contact.property</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <!-- <progressbar field="status" colors="{'new': 'warning', 'offered': 'danger', 'accepted': 'success', 'sold': 'muted', 'cancel': 'muted'}"/> -->
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content p-2">
                                <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                                    <div class="o_kanban_image_fill_left d-none d-md-block">
                                        <field name="image" widget="image" max-width="40px" max-height="40px"/>
                                    </div>
                                    <div class="oe_kanban_details">
                                        <h3>
                                            <p class="mb-0"><b><field name="name"/></b></p>
                                        </h3>
                                        <field class="mt-0" name="phone"/>
                                        <field class="mt-0" name="product_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                                        <p class="my-0"><b>Location : </b><field name="address"/></p>
                                        <p class="my-0"><b>Language : </b><field name="language"/></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="contact_property_view_tree" model="ir.ui.view">
        <field name="name">contact.property.view.tree</field>
        <field name="model">contact.property</field>
        <field name="arch" type="xml">
            <tree string="User Form">
                <field name="name"/>
                <field name="image"/>
                <field name="phone"/>
                <field name="language"/>
                <field name="address"/>
            </tree>
        </field>
    </record>

    <record id="contact_property_view_form" model="ir.ui.view">
        <field name="name">contact.property.view.form</field>
        <field name="model">contact.property</field>
        <field name="arch" type="xml">
            <form string="Contacts">
                <header>
                    <button name="action_order_items" type="object" string="Order" class="btn-primary" invisible="can_be_sold != True"/>
                    <field name="status" widget="statusbar" invisible="can_be_sold != True"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <!-- <field name="name" invisible="can_be_purchased == True"/>
                            <field name="buyer_id" invisible="can_be_purchased != True"/> -->
                            <field name="phone"/>                            
                            <field name="address"/>
                            <field name="language"/>
                            <field name="income_certi"/>
                        </group>
                        <group>
                            <div class="o_field_widget o_field_image oe_avatar">
                                <div class="d-inline-block position-relative">
                                    <div class="d-flex justify-content-between w-100 bottom-0">
                                        <field name="image" widget="image"/>
                                    </div>
                                </div>
                            </div>
                            <group>
                                <field name="can_be_sold"/>
                            </group>
                            <group>
                                <field name="can_be_purchased"/>
                            </group>
                            <group>
                                <field name="product_ids" widget="many2many_tags" options="{'color_field': 'color'}" invisible="can_be_purchased != True"/>
                            </group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sell Products" invisible="can_be_purchased != True">
                            <field name="sale_offer_ids">
                                <tree editable="bottom" open_form_view="True">
                                    <field name="name"/>
                                    <field name="price_unit"/>
                                    <field name="quantity"/>
                                    <field name="tax"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Order" invisible="can_be_sold != True">
                            <field name="purchase_offer_ids">
                                <tree editable="bottom" open_form_view="True">
                                    <field name="name"/>
                                    <field name="price_unit"/>
                                    <field name="quantity"/>
                                    <field name="tax"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="contact_property_view_search" model="ir.ui.view">
        <field name="name">contact_property.view.search</field>
        <field name="model">contact.property</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name"/>
                <field name="product_ids"/>
                <separator/> 
                <filter name="is_farmer" string="Farmers" domain="[('can_be_purchased', '=', 'True')]" />
                <filter name="is_buyer" string="Buyers" domain="[('can_be_sold', '=', 'True')]" />
            </search>
        </field>
    </record>
</odoo>
