<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="index">
        <t t-call="website.layout">

            <link rel="stylesheet" href="style.css"/>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>

            <!-- Products Section -->
            <div class="container">
                <h3 style="text-align:center">Vegetables</h3><hr></hr>
                <div class="row">
                    <t t-foreach="vege_records" t-as="record">
                        <div class="col-6 col-lg-3 mb-5 mb-lg-0" style="margin: 40px auto">
                            <!-- Card -->
                            <div class="card d-block">
                            <t t-if="record.image">
                                <a t-attf-href="/farm/#{record.name}/"><img class="card-img-top" t-att-src="image_data_uri(record.image)" style="height:250px"/></a>
                            </t>
                            <div class="card-footer text-center py-4">
                                <h3 class="h5 mb-1">New releases</h3>
                                <span class="d-block text-muted font-size-1 mb-3"><t t-esc="record.name"/></span>
                                <a class="btn btn-sm btn-outline-primary btn-pill transition-3d-hover px-5" href="#">View All</a>
                            </div>
                            </div>
                            <!-- End Card -->
                        </div>
                    </t>
                </div>
            </div>

            <div class="container">
                <h3 style="text-align:center; margin:40px auto 0px">Grains</h3><hr></hr>
                <div class="row">
                    <t t-foreach="grain_records" t-as="record">
                        <div class="col-6 col-lg-3 mb-5 mb-lg-0" style="margin: 40px auto">
                            <!-- Card -->
                            <div class="card d-block">
                            <t t-if="record.image">
                                <a t-attf-href="/farm/#{record.name}/"><img class="card-img-top" t-att-src="image_data_uri(record.image)"/></a>
                            </t>
                            <div class="card-footer text-center py-4">
                                <h3 class="h5 mb-1">New releases</h3>
                                <span class="d-block text-muted font-size-1 mb-3"><t t-esc="record.name"/></span>
                                <a class="btn btn-sm btn-outline-primary btn-pill transition-3d-hover px-5" href="#">View All</a>
                            </div>
                            </div>
                            <!-- End Card -->
                        </div>
                    </t>
                </div>
            </div>
            <!-- End Products Section -->
        </t>
    </template>


