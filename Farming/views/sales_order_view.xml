<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sales_order_action" model="ir.actions.act_window">
        <field name="name">Sales Orders</field>
        <field name="res_model">sales.order</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="sales_order_view_tree" model="ir.ui.view">
        <field name="name">sales.order.view.tree</field>
        <field name="model">sales.order</field>
        <field name="arch" type="xml">
            <tree string="Sales Orders">
                <field name="partner"/>
                <field name="state"/>
                <field name="create_date" widget="datetime_picker"/>
                <field name="invoice_status"/>
            </tree>
        </field>
    </record>

    <record id="sales_order_view_form" model="ir.ui.view">
        <field name="name">Sales Order</field>
        <field name="model">sales.order</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="partner"/>
                            <field name="date_order"/>
                            <field name="invoice_status"/>
                        </group>
                        <group>
                            <field name="state"/>
                            <field name="create_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="offers">
                                <tree editable="bottom" open_form_view="True">
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="tax"/>
                                    <field name="price_unit"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
